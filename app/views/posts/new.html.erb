<% if flash[:alert1] %>				<!-- @book.errors.any? -->
	<h5>error</h5>										<!-- @book.errors.count -->
		<ul>
			<% flash[:alert1].each do |message| %>
				<li><h6><%= message %></h6></li>
			<% end %>
		</ul>
<% end %>


<div class="center box">

<% if flash[:error] %>
  <div>
    <ul>
      <% flash[:error].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<%= form_with model: @post do |f| %>

		<h5>新しく投稿したい言葉</h5>
		<%= f.text_area :body,
			size: "60x5",
			placeholder:"あなたの印象に残った、感動した言葉をここに入力しましょう" %>
			<br>

		<h5>分類</h5>
		<%= f.select :opinion, [
			["書籍（小説、漫画）", "書籍（小説、漫画）"],
			["映像（映画・ドラマ・アニメ）", "映像（映画・ドラマ・アニメ）"],
			["人物（偉人、知人）", "人物（偉人、知人）"],
			["その他"]],
			include_blank: "選択して下さい" %>
			<br>

		<br>
		<%= f.submit "投稿する" %>

	<% end %>
</div>
